{% extends 'base.html.twig' %}
{% block body %}

    <!-- Shop Single -->
    <div class="shop-single container-fluid no-padding">
        <!-- Container -->
        <div class="container">
            <div class="product-views">
                <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="item">
                            <img src="{{ asset('uploads/brochures/'~product.brochureFilename) }}">

                        </div>


                    </div>
                <!-- Entry Summary -->
                <div class="col-md-6 col-sm-6 col-xs-12 entry-summary">
                    <h3 class="product_title">{{ product.nom }}</h3>

                    <p class="stock in-stock"><span>Marque:</span> {{ product.marque }}</p>

                    <span class="price">{{ product.prix }} â‚¬</span>
                    <form>
                        <a type="button" href="{{ product.url }}" title="Add To Cart" class="btn btn-warning">go to url</a>
                    </form>

                </div><!-- Entry Summary /- -->
            </div>

        </div><!-- Container /- -->
    </div><!-- Shop Single /- -->
{% endblock %}