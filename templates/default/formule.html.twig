{% extends "base.html.twig" %}
{% block body %}
<div style="background-color: #f2f2f2" class="blog-section latest-blog container-fluid">
    <!-- Container -->
    <div class="container">
        <!-- Section Header -->
        <div class="section-header">
            <h3 style="color: white;padding-top: 60px">Our bundle</h3>
        </div><!-- Section Header /- -->
        {% for bundle in fashionbundle %}

        <div class="col-md-4 col-sm-6 col-xs-6">
            <div style="background-color: white" class="type-post">
                <div class="blog-content">
                    <h3 style="padding-top: 15px;" class="entry-title">{{ bundle.nom }}</h3>

                    <h3 style="padding-top: 15px;" class="entry-title"><a href="blog-post.html" title="new Collectios are imported In Our shop.">{{ bundle.description }}</a></h3>
                    <div style="padding-top: 15px;" class="entry-meta">
                        <span class="post-like"><a href="#" title="224 Likes">price : {{ bundle.price }} euro  <i class="fas fa-euro-sign"></i></a></span>
                    </div>
                    <div style="padding-top: 15px;" class="entry-content">
                        <p></p>
                        <a href="{{ path('purchase',{'idbundle': bundle.id}) }}" title="Read More" class="read-more">Purchase</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div><!-- Container /- -->
</div>
{% endblock %}